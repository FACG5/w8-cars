<h1>home    {{name}}</h1>

<form class="form" action="/home" method="post">
    <label class="form__label" for="name">Name</label>
    <input class="form__input" type="text" name="name" id="name" placeholder="Enter Car name" required>
    <label class="form__label" for="image_url">Image URL</label>
    <input class="form__input" type="text" name="image_url" id="image_url" placeholder="Enter image url" required autocomplete="off">
    <label class="form__label" for="description">description</label>
    <input class="form__input" type="text" name="description" id="description" placeholder="Enter description" required autocomplete="off">
    <label class="form__label" for="price">price</label>
    <input class="form__input" type="text" name="price" id="price" placeholder="Enter price" required autocomplete="off">
    <input class="form__btn" type="submit" value="Submit" />
</form>


<section class="main__container">
    <ul class="list">
        {{#each res}}
        <li class="item">
            <a class="link" href="/home/{{this.id}}">
                <img class="image" src="{{this.img_car}}">
            </a>
            <div class="info">
                <h2>{{this.title}}</h2>
                <h4>{{this.price}}</h2>
            </div>
        </li>
        {{/each}}
    </ul>
</section>